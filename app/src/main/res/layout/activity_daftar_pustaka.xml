<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clipToPadding="false"
        android:background="#d1eeff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/colorPrimary"
                    android:elevation="5dp">

                    <include layout="@layout/toolbar" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#d1eeff"
                    android:paddingTop="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/books"/>

                    <com.uncopt.android.widget.text.justify.JustifiedTextView
                        android:id="@+id/tvDaftarPustaka"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Daftar Pustaka"
                        android:textColor="@color/colorSc2"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="20dp"/>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="50dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <android.support.v7.widget.CardView
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    card_view:cardCornerRadius="10dp"
                                    card_view:cardElevation="1dp"
                                    card_view:cardBackgroundColor="#fff"
                                    android:clickable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    card_view:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_gravity="center">

                                        <com.uncopt.android.widget.text.justify.JustifiedTextView
                                            android:id="@+id/tvDaftar"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="Abdullah, Mikrajuddin, Fisika Dasar 1, Bandung: ITB, 2016"
                                            android:textColor="@color/colorSc2"
                                            android:textSize="16sp"
                                            android:paddingStart="10dp"
                                            android:paddingEnd="10dp"
                                            android:paddingTop="10dp"
                                            android:paddingBottom="10dp"/>

                                    </LinearLayout>

                                </android.support.v7.widget.CardView>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <android.support.v7.widget.CardView
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    card_view:cardCornerRadius="10dp"
                                    card_view:cardElevation="1dp"
                                    card_view:cardBackgroundColor="#fff"
                                    android:clickable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    card_view:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_gravity="center">

                                        <com.uncopt.android.widget.text.justify.JustifiedTextView
                                            android:id="@+id/tvDaftar2"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="Giancoli, Douglas c. , Fisika Prinsip dan Aplikasi Edisi ke 5 jilid 1 Jakarta: Erlangga, 2001"
                                            android:textColor="@color/colorSc2"
                                            android:textSize="16sp"
                                            android:paddingStart="10dp"
                                            android:paddingEnd="10dp"
                                            android:paddingTop="10dp"
                                            android:paddingBottom="10dp"/>

                                    </LinearLayout>

                                </android.support.v7.widget.CardView>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <android.support.v7.widget.CardView
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    card_view:cardCornerRadius="10dp"
                                    card_view:cardElevation="1dp"
                                    card_view:cardBackgroundColor="#fff"
                                    android:clickable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    card_view:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_gravity="center">

                                        <com.uncopt.android.widget.text.justify.JustifiedTextView
                                            android:id="@+id/tvDaftar3"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="TIM Fisika Dasar ITB. Buku Ajar Termodinamika dan Mekanika, Bandung 1987"
                                            android:textColor="@color/colorSc2"
                                            android:textSize="16sp"
                                            android:paddingStart="10dp"
                                            android:paddingEnd="10dp"
                                            android:paddingTop="10dp"
                                            android:paddingBottom="10dp"/>

                                    </LinearLayout>

                                </android.support.v7.widget.CardView>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <android.support.v7.widget.CardView
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    card_view:cardCornerRadius="10dp"
                                    card_view:cardElevation="1dp"
                                    card_view:cardBackgroundColor="#fff"
                                    android:clickable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    card_view:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_gravity="center">

                                        <com.uncopt.android.widget.text.justify.JustifiedTextView
                                            android:id="@+id/tvDaftar4"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="Yang Hendri, 20 september 2014, Rotasi bumi dan Bulan, diperoleh dari https://www.youtube.com/watch?v=ClymVO4qUjU"
                                            android:textColor="@color/colorSc2"
                                            android:textSize="16sp"
                                            android:paddingStart="10dp"
                                            android:paddingEnd="10dp"
                                            android:paddingTop="10dp"
                                            android:paddingBottom="10dp"/>

                                    </LinearLayout>

                                </android.support.v7.widget.CardView>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <android.support.v7.widget.CardView
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    card_view:cardCornerRadius="10dp"
                                    card_view:cardElevation="1dp"
                                    card_view:cardBackgroundColor="#fff"
                                    android:clickable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    card_view:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_gravity="center">

                                        <com.uncopt.android.widget.text.justify.JustifiedTextView
                                            android:id="@+id/tvDaftar5"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="Syarifah Hafizah 9 agustus 2017, Video Pembelajaran Gerak Melingkar, diperoleh dari https://www.youtobe.com/watch?v=Exq2T20DY8A"
                                            android:textColor="@color/colorSc2"
                                            android:textSize="16sp"
                                            android:paddingStart="10dp"
                                            android:paddingEnd="10dp"
                                            android:paddingTop="10dp"
                                            android:paddingBottom="10dp"/>

                                    </LinearLayout>

                                </android.support.v7.widget.CardView>

                            </LinearLayout>

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>
            </android.support.design.widget.AppBarLayout>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom|center"
            android:elevation="6dp"
            android:layout_marginEnd="10dp"
            app:fabSize="normal"
            android:onClick="menuUtama"
            app:backgroundTint="#fff"
            android:src="@drawable/menu"/>

    </android.support.design.widget.CoordinatorLayout>

</android.support.v4.widget.DrawerLayout>